<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.note.pankaj.notes.views.AddUpdateNoteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/img_btn_height"
            android:layout_height="@dimen/img_btn_height"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_title_add_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_note"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_heading"
            android:paddingEnd="@dimen/padding_for_title"
            android:paddingRight="@dimen/padding_for_title"/>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_padding_large"
        android:hint="@string/write_here"
        android:textSize="@dimen/text_medium"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_update" />

    <ImageButton
        android:id="@+id/ib_add_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_padding_large"
        android:src="@drawable/ic_check_white_24dp"
        android:background="@drawable/btn_selection_rounded"
        android:padding="@dimen/view_padding_large"
        android:text="Add/Update"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
